<?xml version="1.0" encoding="utf-8"?>
<!-- Used for most UI about button -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>

            <!-- 按下时背景色 -->
            <!-- <gradient android:angle="90" android:endColor="#3196dc" android:startColor="#3196dc" /> -->
            <gradient android:angle="90" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />

            <corners android:radius="3dp" />

            <!-- 按下时四周边线色 -->
            <stroke android:width="0.5dp" android:color="#CDCD00" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>
    <item android:drawable="@android:color/transparent"></item>

</selector>